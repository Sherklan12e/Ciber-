@model IEnumerable<Ciber.core.HistorialdeAlquiler>

@{
    ViewData["Title"] = "Historial de Alquileres";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-6 text-primary">
                <i class="fas fa-history me-2"></i>Historial de Alquileres
            </h1>
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus me-2"></i>Agregar Registro
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-list me-2"></i>Registros del Historial
                </h5>
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>
                                        <i class="fas fa-hashtag me-1"></i>ID Historial
                                    </th>
                                    <th>
                                        <i class="fas fa-user me-1"></i>Cuenta
                                    </th>
                                    <th>
                                        <i class="fas fa-desktop me-1"></i>Máquina
                                    </th>
                                    <th>
                                        <i class="fas fa-play me-1"></i>Fecha Inicio
                                    </th>
                                    <th>
                                        <i class="fas fa-stop me-1"></i>Fecha Fin
                                    </th>
                                    <th>
                                        <i class="fas fa-calculator me-1"></i>Total a Pagar
                                    </th>
                                    <th>
                                        <i class="fas fa-money-bill me-1"></i>Monto Pagado
                                    </th>
                                    <th>
                                        <i class="fas fa-dollar-sign me-1"></i>Precio/Hora
                                    </th>
                                    <th>
                                        <i class="fas fa-clock me-1"></i>Duración
                                    </th>
                                    <th class="text-center">
                                        <i class="fas fa-cogs me-1"></i>Acciones
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <span class="badge bg-primary">@item.IdHistorial</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-info">@item.Ncuenta</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-success">@item.Nmaquina</span>
                                        </td>
                                        <td>
                                            <span class="text-muted">
                                                <i class="fas fa-calendar me-1"></i>@item.FechaInicio.ToString("dd/MM/yyyy HH:mm")
                                            </span>
                                        </td>
                                        <td>
                                            <span class="text-muted">
                                                <i class="fas fa-calendar me-1"></i>@item.FechaFin.ToString("dd/MM/yyyy HH:mm")
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge bg-success fs-6">
                                                <i class="fas fa-calculator me-1"></i>@item.TotalPagar.ToString("C")
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge bg-info fs-6">
                                                <i class="fas fa-money-bill me-1"></i>@item.MontoPagado.ToString("C")
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge bg-warning fs-6">
                                                <i class="fas fa-dollar-sign me-1"></i>@item.PrecioPorHora.ToString("C")
                                            </span>
                                        </td>
                                        <td>
                                            <span class="text-muted">
                                                <i class="fas fa-clock me-1"></i>@item.DuracionTotal.ToString(@"hh\:mm")
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@item.IdHistorial" 
                                                   class="btn btn-sm btn-outline-info" title="Ver Detalles">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-history fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">No hay registros en el historial</h4>
                        <p class="text-muted">El historial de alquileres está vacío.</p>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Agregar Primer Registro
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
