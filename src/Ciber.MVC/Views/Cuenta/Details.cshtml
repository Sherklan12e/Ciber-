@model Ciber.core.Cuenta

@{
    ViewData["Title"] = "Detalles de la Cuenta";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-6 text-primary">
                <i class="fas fa-user me-2"></i>Detalles de la Cuenta
            </h1>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Volver a la Lista
            </a>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-user me-2"></i>Informaci√≥n de la Cuenta #@Model.Ncuenta
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-hashtag me-1"></i>ID de Cuenta:
                        </label>
                        <p class="form-control-plaintext">
                            <span class="badge bg-primary fs-6">@Model.Ncuenta</span>
                        </p>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-user me-1"></i>Nombre:
                        </label>
                        <p class="form-control-plaintext fs-5">@Model.Nombre</p>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-id-card me-1"></i>DNI:
                        </label>
                        <p class="form-control-plaintext fs-5">@Model.Dni</p>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-clock me-1"></i>Hora de Registro:
                        </label>
                        <p class="form-control-plaintext fs-5">
                            <i class="fas fa-clock me-1 text-muted"></i>@Model.HoraRegistrada.ToString(@"hh\:mm")
                        </p>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a asp-action="Edit" asp-route-id="@Model.Ncuenta" class="btn btn-warning me-md-2">
                        <i class="fas fa-edit me-2"></i>Editar
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-list me-2"></i>Volver a la Lista
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
