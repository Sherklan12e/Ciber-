@model Ciber.core.Cuenta

@{
    ViewData["Title"] = "Editar Cuenta";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-6 text-primary">
                <i class="fas fa-user-edit me-2"></i>Editar Cuenta
            </h1>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Volver a la Lista
            </a>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-warning text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-user-edit me-2"></i>Editar Información de la Cuenta #@Model.Ncuenta
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <input type="hidden" asp-for="Ncuenta" />
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Nombre" class="form-label">
                                <i class="fas fa-user me-1"></i>Nombre Completo
                            </label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre completo" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="Dni" class="form-label">
                                <i class="fas fa-id-card me-1"></i>DNI
                            </label>
                            <input asp-for="Dni" class="form-control" placeholder="Ingrese el DNI" />
                            <span asp-validation-for="Dni" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Pass" class="form-label">
                                <i class="fas fa-lock me-1"></i>Contraseña
                            </label>
                            <input asp-for="Pass" type="password" class="form-control" placeholder="Ingrese la nueva contraseña" />
                            <span asp-validation-for="Pass" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="HoraRegistrada" class="form-label">
                                <i class="fas fa-clock me-1"></i>Hora de Registro
                            </label>
                            <input asp-for="HoraRegistrada" type="time" class="form-control" />
                            <span asp-validation-for="HoraRegistrada" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-12">
                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <a asp-action="Index" class="btn btn-outline-secondary me-md-2">
                                    <i class="fas fa-times me-2"></i>Cancelar
                                </a>
                                <button type="submit" class="btn btn-warning">
                                    <i class="fas fa-save me-2"></i>Guardar Cambios
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
