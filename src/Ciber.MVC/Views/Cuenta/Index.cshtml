@model IEnumerable<Ciber.core.Cuenta>

@{
    ViewData["Title"] = "Gestión de Cuentas";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-6 text-primary">
                <i class="fas fa-users me-2"></i>Gestión de Cuentas
            </h1>
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus me-2"></i>Crear Nueva Cuenta
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-list me-2"></i>Lista de Cuentas
                </h5>
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>
                                        <i class="fas fa-hashtag me-1"></i>ID
                                    </th>
                                    <th>
                                        <i class="fas fa-user me-1"></i>Nombre
                                    </th>
                                    <th>
                                        <i class="fas fa-id-card me-1"></i>DNI
                                    </th>
                                    <th>
                                        <i class="fas fa-clock me-1"></i>Hora Registrada
                                    </th>
                                    <th class="text-center">
                                        <i class="fas fa-cogs me-1"></i>Acciones
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <span class="badge bg-primary">@item.Ncuenta</span>
                                        </td>
                                        <td>
                                            <strong>@item.Nombre</strong>
                                        </td>
                                        <td>
                                            @item.Dni
                                        </td>
                                        <td>
                                            <span class="text-muted">
                                                <i class="fas fa-clock me-1"></i>@item.HoraRegistrada.ToString(@"hh\:mm")
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@item.Ncuenta" 
                                                   class="btn btn-sm btn-outline-info" title="Ver Detalles">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@item.Ncuenta" 
                                                   class="btn btn-sm btn-outline-warning" title="Editar">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.Ncuenta" 
                                                   class="btn btn-sm btn-outline-danger" title="Eliminar">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-users fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">No hay cuentas registradas</h4>
                        <p class="text-muted">Comienza creando la primera cuenta del sistema.</p>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Crear Primera Cuenta
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
