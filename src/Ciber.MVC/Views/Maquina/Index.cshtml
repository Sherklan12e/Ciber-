@model IEnumerable<Ciber.core.Maquina>

@{
    ViewData["Title"] = "Gestión de Máquinas";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-6 text-primary">
                <i class="fas fa-desktop me-2"></i>Gestión de Máquinas
            </h1>
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus me-2"></i>Agregar Nueva Máquina
            </a>
        </div>
    </div>
</div>

<div class="row mb-3">
    <div class="col-12">
        <div class="btn-group" role="group">
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="fas fa-list me-1"></i>Todas
            </a>
            <a asp-action="Disponibles" class="btn btn-outline-success">
                <i class="fas fa-check-circle me-1"></i>Disponibles (@ViewBag.MaquinasDisponibles)
            </a>
            <a asp-action="Ocupadas" class="btn btn-outline-warning">
                <i class="fas fa-times-circle me-1"></i>Ocupadas (@ViewBag.MaquinasOcupadas)
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-list me-2"></i>Lista de Máquinas
                </h5>
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>
                                        <i class="fas fa-hashtag me-1"></i>ID
                                    </th>
                                    <th>
                                        <i class="fas fa-desktop me-1"></i>Estado
                                    </th>
                                    <th>
                                        <i class="fas fa-info-circle me-1"></i>Características
                                    </th>
                                    <th>
                                        <i class="fas fa-dollar-sign me-1"></i>Precio/Hora
                                    </th>
                                    <th>
                                        <i class="fas fa-tag me-1"></i>Tipo
                                    </th>
                                    <th class="text-center">
                                        <i class="fas fa-cogs me-1"></i>Acciones
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <span class="badge bg-primary">@item.Nmaquina</span>
                                        </td>
                                        <td>
                                            @if (item.Estado)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check-circle me-1"></i>Disponible
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">
                                                    <i class="fas fa-times-circle me-1"></i>Ocupada
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.Caracteristicas))
                                            {
                                                <span class="text-muted">@item.Caracteristicas</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted fst-italic">Sin características</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge bg-success fs-6">
                                                <i class="fas fa-dollar-sign me-1"></i>@item.PrecioPorHora.ToString("C")
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge bg-info">@item.TipoMaquina</span>
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@item.Nmaquina" 
                                                   class="btn btn-sm btn-outline-info" title="Ver Detalles">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@item.Nmaquina" 
                                                   class="btn btn-sm btn-outline-warning" title="Editar">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.Nmaquina" 
                                                   class="btn btn-sm btn-outline-danger" title="Eliminar">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-desktop fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">No hay máquinas registradas</h4>
                        <p class="text-muted">Comienza agregando la primera máquina del sistema.</p>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Agregar Primera Máquina
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>