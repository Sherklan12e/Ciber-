@model Ciber.core.Maquina

@{
    ViewData["Title"] = "Editar Máquina";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-6 text-primary">
                <i class="fas fa-desktop-edit me-2"></i>Editar Máquina
            </h1>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Volver a la Lista
            </a>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-warning text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-desktop-edit me-2"></i>Editar Información de la Máquina #@Model.Nmaquina
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <input type="hidden" asp-for="Nmaquina" />
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Estado" class="form-label">
                                <i class="fas fa-toggle-on me-1"></i>Estado
                            </label>
                            <select asp-for="Estado" class="form-select">
                                <option value="true">Disponible</option>
                                <option value="false">Ocupada</option>
                            </select>
                            <span asp-validation-for="Estado" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="Caracteristicas" class="form-label">
                                <i class="fas fa-info-circle me-1"></i>Características
                            </label>
                            <input asp-for="Caracteristicas" class="form-control" placeholder="Ej: Intel i7, 16GB RAM, GTX 1660" />
                            <span asp-validation-for="Caracteristicas" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-12">
                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <a asp-action="Index" class="btn btn-outline-secondary me-md-2">
                                    <i class="fas fa-times me-2"></i>Cancelar
                                </a>
                                <button type="submit" class="btn btn-warning">
                                    <i class="fas fa-save me-2"></i>Guardar Cambios
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
