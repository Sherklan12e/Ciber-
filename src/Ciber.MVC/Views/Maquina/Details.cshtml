@model Ciber.core.Maquina

@{
    ViewData["Title"] = "Detalles de la Máquina";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-6 text-primary">
                <i class="fas fa-desktop me-2"></i>Detalles de la Máquina
            </h1>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Volver a la Lista
            </a>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-desktop me-2"></i>Información de la Máquina #@Model.Nmaquina
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-hashtag me-1"></i>ID de Máquina:
                        </label>
                        <p class="form-control-plaintext">
                            <span class="badge bg-primary fs-6">@Model.Nmaquina</span>
                        </p>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-toggle-on me-1"></i>Estado:
                        </label>
                        <p class="form-control-plaintext">
                            @if (Model.Estado)
                            {
                                <span class="badge bg-success fs-6">
                                    <i class="fas fa-check-circle me-1"></i>Disponible
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-warning fs-6">
                                    <i class="fas fa-times-circle me-1"></i>Ocupada
                                </span>
                            }
                        </p>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-12 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-info-circle me-1"></i>Características:
                        </label>
                        <p class="form-control-plaintext fs-5">
                            @if (!string.IsNullOrEmpty(Model.Caracteristicas))
                            {
                                @Model.Caracteristicas
                            }
                            else
                            {
                                <span class="text-muted fst-italic">Sin características especificadas</span>
                            }
                        </p>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a asp-action="Edit" asp-route-id="@Model.Nmaquina" class="btn btn-warning me-md-2">
                        <i class="fas fa-edit me-2"></i>Editar
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-list me-2"></i>Volver a la Lista
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
