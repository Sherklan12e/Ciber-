@model IEnumerable<Ciber.core.Alquiler>

@{
    ViewData["Title"] = "Gestión de Alquileres";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-6 text-primary">
                <i class="fas fa-clock me-2"></i>Gestión de Alquileres
            </h1>
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus me-2"></i>Crear Nuevo Alquiler
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-list me-2"></i>Lista de Alquileres Activos
                </h5>
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>
                                        <i class="fas fa-hashtag me-1"></i>ID Alquiler
                                    </th>
                                    <th>
                                        <i class="fas fa-user me-1"></i>Cuenta
                                    </th>
                                    <th>
                                        <i class="fas fa-desktop me-1"></i>Máquina
                                    </th>
                                    <th>
                                        <i class="fas fa-tag me-1"></i>Tipo
                                    </th>
                                    <th>
                                        <i class="fas fa-clock me-1"></i>Tiempo
                                    </th>
                                    <th>
                                        <i class="fas fa-dollar-sign me-1"></i>Precio/Hora
                                    </th>
                                    <th>
                                        <i class="fas fa-calculator me-1"></i>Total
                                    </th>
                                    <th>
                                        <i class="fas fa-money-bill me-1"></i>Pagado
                                    </th>
                                    <th>
                                        <i class="fas fa-play me-1"></i>Inicio
                                    </th>
                                    <th class="text-center">
                                        <i class="fas fa-cogs me-1"></i>Acciones
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <span class="badge bg-primary">@item.IdAlquiler</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-info">@item.Ncuenta</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-success">@item.Nmaquina</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">@item.Tipo</span>
                                        </td>
                                        <td>
                                            @if (item.CantidadTiempo.HasValue)
                                            {
                                                <span class="text-muted">
                                                    <i class="fas fa-clock me-1"></i>@item.CantidadTiempo.Value.ToString(@"hh\:mm")
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted fst-italic">Sin tiempo específico</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge bg-info fs-6">
                                                <i class="fas fa-dollar-sign me-1"></i>@item.PrecioPorHora.ToString("C")
                                            </span>
                                        </td>
                                        <td>
                                            @if (item.TotalAPagar.HasValue)
                                            {
                                                <span class="badge bg-success fs-6">
                                                    <i class="fas fa-calculator me-1"></i>@item.TotalAPagar.Value.ToString("C")
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted fst-italic">En curso</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.MontoPagado.HasValue)
                                            {
                                                <span class="badge bg-success fs-6">
                                                    <i class="fas fa-money-bill me-1"></i>@item.MontoPagado.Value.ToString("C")
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted fst-italic">Sin pago</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="text-muted">
                                                <i class="fas fa-calendar me-1"></i>@item.FechaInicio.ToString("HH:mm")
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@item.IdAlquiler" 
                                                   class="btn btn-sm btn-outline-info" title="Ver Detalles">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                @if (item.EsActivo)
                                                {
                                                    <a asp-action="Finalizar" asp-route-id="@item.IdAlquiler" 
                                                       class="btn btn-sm btn-outline-success" title="Finalizar Alquiler">
                                                        <i class="fas fa-stop"></i>
                                                    </a>
                                                }
                                                <a asp-action="Delete" asp-route-id="@item.IdAlquiler" 
                                                   class="btn btn-sm btn-outline-danger" title="Eliminar">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-clock fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">No hay alquileres activos</h4>
                        <p class="text-muted">Comienza creando el primer alquiler del sistema.</p>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Crear Primer Alquiler
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
